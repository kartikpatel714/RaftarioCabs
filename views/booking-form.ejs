<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', { title: 'Book Your Ride - RaftarioCabs' }) %>
        <style>
            body {
                background-color: #f8f9fa;
                padding-top: 70px;
                /* Space for fixed header */
                /* Space for footer */
                min-height: 100vh;
            }

            .booking-container {
                background: white;
                padding: 30px;
                border-radius: 12px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
                max-width: 500px;
                margin: 40px auto;
                transition: all 0.3s ease;
            }

            .booking-container:hover {
                box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
            }

            .booking-container img {
                width: 60px;
                height: 60px;
                margin: 0 auto 15px;
                display: block;
            }

            .booking-container h5 {
                color: #2c3e50;
                font-weight: 700;
                margin-bottom: 5px;
                text-align: center;
            }

            .booking-container p {
                color: #7f8c8d;
                text-align: center;
                margin-bottom: 25px;
            }

            .form-group {
                margin-bottom: 20px;
            }

            .form-control {
                border: 1px solid #ddd;
                border-radius: 8px;
                padding: 12px 15px;
                font-size: 16px;
                transition: all 0.3s;
            }

            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            }

            .btn-custom {
                background-color: #ffcc00;
                color: #2c3e50;
                border: none;
                font-weight: 600;
                padding: 12px;
                border-radius: 8px;
                width: 100%;
                cursor: pointer;
                transition: all 0.3s;
                font-size: 16px;
                margin-top: 10px;
            }

            .btn-custom:hover {
                background-color: #e6b800;
                transform: translateY(-2px);
            }

            .btn-custom:active {
                transform: translateY(0);
            }

            .btn-custom.loading {
                position: relative;
                pointer-events: none;
            }

            .btn-custom.loading::after {
                content: "";
                position: absolute;
                width: 20px;
                height: 20px;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                margin: auto;
                border: 3px solid transparent;
                border-top-color: #2c3e50;
                border-radius: 50%;
                animation: button-loading-spinner 1s ease infinite;
            }

            @keyframes button-loading-spinner {
                from {
                    transform: rotate(0turn);
                }

                to {
                    transform: rotate(1turn);
                }
            }

            /* Responsive adjustments */
            @media (max-width: 576px) {
                .booking-container {
                    padding: 20px;
                    margin: 20px 15px;
                }

                body {
                    padding-top: 60px;
                }
            }
        </style>
</head>

<body>
    <%- include('partials/header') %>

        <div class="container">
            <div class="booking-container">
                <img src="/images/car-icon.png" alt="Car Icon" class="img-fluid">
                <h5>
                    <%= pickup %> to <%= drop %>
                </h5>
                <p><strong>
                        <%= carType %>
                    </strong> - â‚¹<%= fare %>
                </p>

                <form id="bookingForm">
                    <input type="hidden" name="pickup" value="<%= pickup %>">
                    <input type="hidden" name="drop" value="<%= drop %>">
                    <input type="hidden" name="carType" value="<%= carType %>">
                    <input type="hidden" name="fare" value="<%= fare %>">

                    <div class="form-group">
                        <input type="text" class="form-control" name="userName" placeholder="Your Full Name" required
                            pattern="[A-Za-z ]+" title="Please enter a valid name (letters only)">
                    </div>

                    <div class="form-group">
                        <input type="tel" class="form-control" name="mobile" placeholder="Mobile Number" required
                            pattern="[0-9]{10}" title="Please enter a 10-digit mobile number">
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" name="pickupDetail" placeholder="Exact Pickup Address"
                            required>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" name="dropDetail" placeholder="Exact Drop Address"
                            required>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" name="gstNumber" placeholder="GST Number (Optional)"
                            pattern="[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}"
                            title="Enter valid GST number (e.g. 22AAAAA0000A1Z5)">
                    </div>

                    <button type="submit" class="btn btn-custom" id="submitBtn">
                        Confirm Booking
                    </button>
                </form>
            </div>
        </div>

        <%- include('partials/footer') %>

            <script>
                document.getElementById("bookingForm").addEventListener("submit", function (e) {
                    e.preventDefault();

                    const form = this;
                    const btn = document.getElementById("submitBtn");

                    // Validate form
                    if (!form.checkValidity()) {
                        form.reportValidity();
                        return;
                    }

                    // Show loading state
                    btn.disabled = true;
                    btn.classList.add('loading');
                    btn.innerHTML = '';

                    // Prepare form data
                    const formData = new FormData(form);
                    const bookingData = Object.fromEntries(formData.entries());

                    // Add timestamp
                    bookingData.bookingTime = new Date().toISOString();

                    fetch('/api/bookings', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(bookingData)
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.json();
                        })
                        .then(data => {
                            if (data.success) {
                                // Show success message
                                alert('Booking confirmed! Your booking ID: ' + data.bookingId);
                                window.location.href = `/booking-confirmation/${data.bookingId}`;
                            } else {
                                throw new Error(data.message || 'Booking failed');
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert(error.message || 'An error occurred. Please try again.');
                        })
                        .finally(() => {
                            btn.disabled = false;
                            btn.classList.remove('loading');
                            btn.innerHTML = 'Confirm Booking';
                        });
                });

                // Add input masking for mobile number
                document.querySelector('input[name="mobile"]').addEventListener('input', function (e) {
                    this.value = this.value.replace(/\D/g, '').slice(0, 10);
                });
            </script>
</body>

</html>